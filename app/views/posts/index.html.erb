
<p id="notice"><%= notice %></p>

<% if(rand(2) == 1) %>
<%= render partial: "banner" %>
<%end%>
<h1>Posts</h1>
<table class="table table-hover">
  <thead class="table-light">
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= link_to 'Show', post, class: "btn btn-primary" %></td>
        <% if current_user && current_user.admin %>
        <td><%= link_to 'Edit', edit_post_path(post), class: "btn btn-primary" %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you suree?' }, class: "btn btn-primary" %></td>
        <%end%>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>